<h1 class="page_caption mt-3"><%= t('.header') %></h1>

<div class="card">
  <div class="card-body">
    <p class="card-text">
      <strong><%= t('.rule') %>:</strong>
      <%= @badge.rule_label %>
    </p>

    <p class="card-text">
      <strong><%= t('.image') %>:</strong>
      <%= @badge.image_path %>
      <br>
      <img src="<%= @badge.image_path %>"width="128" height="128" alt="badge">
    </p>

    <p class="card-text">
      <strong><%= t('.title') %>:</strong>
      <%= @badge.title %>
    </p>

    <p class="card-text">
      <strong><%= t('.value') %>:</strong>
      <%= @badge.value %>
    </p>
  </div>
</div>

<p class="mb-3">
  <span class="navigation_link">
    <%= link_to t('.edit'), 
                edit_admin_badge_path(@badge), 
                class: 'btn btn-sm' %>
  </span>|
  <span class="navigation_link">
    <%= link_to t('.go_back'), 
                admin_badges_path, 
                class: 'btn btn-sm' %>
  </span>
</p>
