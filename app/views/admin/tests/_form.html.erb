<!-- https://apidock.com/rails/ActionView/Helpers/FormHelper/form_with -->
<%= form_with(model: [:admin, test], local: true) do |form| %>
  <%= render 'shared/errors', resource: test %>

  <div class="form-group">
    <b><%= form.label :category %>:</b>
    <!-- http://rusrails.ru/rails-form-helpers -->
    <%= form.collection_select :category_id, 
                                Category.all, 
                                :id, 
                                :title, 
                                {prompt: true}, 
                                class: 'form-control'%>
  </div>

  <div class="form-group">
    <b><%= form.label :title %>:</b>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <b><%= form.label :level %>:</b>
    <%= form.number_field :level, class: 'form-control', min: 0 %>
  </div>

  <div class="form-group">
    <b><%= form.label :timer %>, <%= t('.minutes') %>:</b>
    <%= form.number_field :timer, class: 'form-control', min: 0 %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
