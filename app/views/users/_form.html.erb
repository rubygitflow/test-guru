<!-- https://apidock.com/rails/ActionView/Helpers/FormHelper/form_with -->
<%= form_with model: user, local: true do |form| %>
  <%= render 'shared/errors', resource: user %>

  <div class="form-group">
    <b><%= form.label :name %>:</b>
    <%= form.text_field :name, id: :user_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <b><%= form.label :email %>:</b>
    <%= form.text_field :email, id: :user_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <b><%= form.label :password %>:</b>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <b><%= form.label :password_confirmation %>:</b>
    <%= form.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="action_button">
    <%= form.submit %>
  </div>
<% end %>
