<li>
  <%= answer.body %><br>
  <%= link_to t('.show'), 
              admin_answer_path(answer), 
              class: 'btn btn-outline-primary  btn-sm' %>
  <%= link_to t('.edit'), 
              edit_admin_answer_path(answer), 
              class: 'btn btn-outline-primary  btn-sm' %>
  <%= link_to t('.delete'), 
              admin_answer_path(answer), 
              method: :delete, 
              data: {confirm: t('.confirm')}, 
              class: 'btn btn-outline-danger  btn-sm' %>
</li>
