<h1 class="page_caption mt-3"><%= t('.header') %></h1>

<table class="table table-striped table-borderless">
  <thead>
  <tr>
    <th>â„–</th>
    <th><%= t('.category') %></th>
    <th  class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th><%= t('.level') %></th>
    <th><%= t('.author') %></th>
    <th><%= t('.count_questions') %></th>
    <th><%= t('.actions') %></th>
  </tr>
  </thead>

  <tbody>
    <% @tests.each.with_index(1) do |test, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= test.category.title %></td>
        <td><%= test.title %></td>
        <td><%= test.level %></td>
        <td><%= test.author.email %></td>
        <td><%= test.questions.size %></td>
        <td><%= button_to t('.start'), 
                          start_test_path(test), 
                          class: 'btn btn-outline-success  btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
