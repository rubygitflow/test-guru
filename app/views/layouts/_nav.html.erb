<div class="header">
  <div class="header_left">
    <h3><%= link_to 'Test Guru', root_path %></h3>
  </div>

  <div class="header_right">
    <p class="user_menu">
      <% if logged_in? %>
        <b>Welcome, <%= current_user.name %> Guru</b>
        <%= link_to 'Logout', logout_path, method: :delete %>
      <% else %>
        <%= link_to 'Log In', login_path %>
        <%= link_to 'Registration', signup_path %>
      <% end %>
    </p>
  </div>
</div>