<!-- https://apidock.com/rails/ActionView/Helpers/FormHelper/form_with -->
<%= form_with(model: action_name == 'edit' ? question : [question.test, question], local: true) do |form| %>
  <div class="edit_text">
    <%= form.text_field :body %>
  </div>
  <div class="action_button">
    <%= form.submit %>
  </div>
<% end %>
