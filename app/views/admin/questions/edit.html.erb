<%= render 'test_title', test: @question.test %>

<h2 class="page_caption"><%= question_header(@question) %></h2>

<div class="card">
  <div class="card-body">
    <%= render 'form', question: @question %>
  </div>
</div>

<p>
  <span class="navigation_link">
    <%= link_to t('.show'), 
                admin_question_path(@question), 
                class: 'btn btn-sm' %>
  </span>|
  <span class="navigation_link">
    <%= link_to t('.go_back'), 
                admin_test_questions_path(@question.test), 
                class: 'btn btn-sm' %>
  </span>
</p>
