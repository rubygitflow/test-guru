<tr>
  <td class="align-middle" scope="row"><%= badge.title %></td>
  <td class="align-middle">
    <img src="<%= badge.image_path %>"width="48" height="48" alt="badge">
  </td>
  <td class="align-middle"><%= badge.rule_label %></td>
  <td class="align-middle">
    <%= link_to t('.show'), admin_badge_path(badge), 
                            class: 'btn btn-outline-primary btn-sm' %>
  </td>
  <td class="align-middle">
    <%= link_to t('.edit'), edit_admin_badge_path(badge), 
                            class: 'btn btn-outline-primary btn-sm' %>
  </td>
  <td class="align-middle">
    <%= link_to t('.delete'), admin_badge_path(badge), 
                              method: :delete, 
                              data: {confirm: t('.confirm')}, 
                              class: 'btn btn-outline-danger btn-sm' %>
  </td>
</tr>
