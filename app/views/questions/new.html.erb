<h1><%= @test.title</h1>
<br>
<h>Create new question</h>

<form action="<%= test_questions_path(@test) %>" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <p>
    <label for="question-body">Question:</label>
    <input type="text" name="question[body]" id="question-body" size="70">
  </p>

  <input type="submit" value="Create">
</form>
