<h1 class="mt-3"><%= t('.header', title: @test_passage.test.title) %></h1>

<div class="h4 py-5">
  <%= t('.title') %>
  <% if success?(@completed_percent) %>
    <span style = "color: green"><%= @completed_percent %>%.</span>
    <%= t('.passed_message') %>
  <% else %>
    <span style = "color: red"><%= @completed_percent %>%.</span>
    <%= t('.failed_message') %>
  <% end %>
  <% if @test_passage.badges.present? %>
    <p class="card-text"><%= t('.rewards') %></p>
    <p>
      <% @test_passage.badges.each do |badge| %>
        <img src="<%= badge.image_path %>"width="128" height="128" alt="badge">
      <% end %>
    </p>
  <% end %>
</div>

<div class="py-1">
  <%= link_to t('.go_back'), 
              tests_path, 
              class: 'btn btn-light btn-lg btn-block' %>
</div>
